VM		= hg
VM-POPULATE	= hg addremove
VM-VERIFY	= hg verify
VM-COMMIT	= hg commit
VM-PUSH		= hg push
VM-PULL		= hg pull
VM-CLONE	= hg clone
VM-TAG		= hg tag
VM-BRANCH	= hg update
VM-PUSH-BRANCH	= -r
VM-LOG          = hg log --template "(\"{date|shortdate}\" \"{author}\" \"{files}\" \"{desc|fill68|urlescape}\" \"{node|short}\" \"{branches}\")"

hg-push:
	if [ "$(HOPBRANCH) " != " " ]; then \
	  $(VM-PUSH) $(VM-PUSH-BRANCH) $(HOPBRANCH) $(HOPSVN); \
        else \
	  $(VM-PUSH) $(HOPSVN); \
        fi

hg-pull:
	$(VM-PULL) $(HOPSVN)
