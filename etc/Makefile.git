VM		= git
VM-POPULATE	= git add
VM-VERIFY	= git fsck
VM-COMMIT	= git commit -a
VM-PUSH		= git push
VM-PULL		= git pull
VM-CLONE	= git clone
VM-TAG		= git tag
VM-BRANCH	= git checkout
VM-PUSH-BRANCH	= -r
VM-LOG          = git log --date=short --pretty=format:"(\"%cd\" \"%cn <%ce>\" \"b\" \"%f\"  \"%h\" \"%T\")"
VM-ID		= git log -1 --abbrev-commit --pretty="%h"

git-push:
	$(VM-PUSH)
	tar cvfz git.`date +'%F'`.tgz .git

git-pull:
	$(VM-PULL)

git-id:
	$(VM-ID)
