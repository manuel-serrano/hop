JAVAC		= @JAVAC@

MODFILE		= 644
MODDIR		= 755
MODEXE		= 755

INSTALL		= @INSTALL@

#*---------------------------------------------------------------------*/
#*    Compilation flags                                                */
#*---------------------------------------------------------------------*/
DEBUG		= @DEBUG@
CCOMP		= @CC@
