BLJVMFLAGS      = @BLFLAGS@ -jvm-purify -unsafe
BEJVMFLAGS	= -jvm-jar
BHFLAGS		= @BHFLAGS@ -q -mkaddheap -mkaddlib $(EFLAGS)
