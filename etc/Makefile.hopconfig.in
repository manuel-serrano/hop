CCFLAGS		= @CCFLAGS@

BIGLOOPTHLIBS	= @BIGLOOPTHLIBS@
BIGLOOPTHLIBU	= @BIGLOOPTHLIBU@
BIGLOOSSLLIBS	= @BIGLOOSSLLIBS@
BIGLOOSSLLIBU	= @BIGLOOSSLLIBU@

BSCM2JSFLAGS	= @BSCM2JSFLAGS@
BHOPCFLAGS	= @BHOPCFLAGS@

#*---------------------------------------------------------------------*/
#*    Linking                                                          */
#*---------------------------------------------------------------------*/
BGLCLOSELIBS_S	= $(BIGLOOPTHLIBS) \
                  $(BIGLOOSSLLIBS) \
