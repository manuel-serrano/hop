# lib/hopscheme.init
init=lib/hop/$version/hopscheme.init
mkdir -p lib
mkdir -p hopscheme/o

rm -f $init 2> /dev/null
echo ";* Automatically generated file (don't edit) */" > $init

cat etc/hopscheme.init.in \
    | sed -e "s|@VERSION@|$version|" \
          -e "s|@BRANCH@|$branch|" \
    >> $init
echo "" >> $init
chmod a-w $init

# lib/hopdroid.init
if [ "$arch " = "android " ]; then
  init=lib/hop/$version/hopdroid.init
  mkdir -p lib
  mkdir -p hopdroid/o

  rm -f $init 2> /dev/null
  echo ";* Automatically generated file (don't edit) */" > $init
 
  cat etc/hopdroid.init.in \
      | sed -e "s|@VERSION@|$version|" \
            -e "s|@BRANCH@|$branch|" \
      >> $init
  echo "" >> $init
  chmod a-w $init
fi
  
# lib/js2scheme.init
init=lib/hop/$version/js2scheme.init
mkdir -p lib
mkdir -p js2scheme/o

rm -f $init 2> /dev/null
echo ";* Automatically generated file (don't edit) */" > $init

