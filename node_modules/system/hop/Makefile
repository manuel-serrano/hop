#*    -------------------------------------------------------------    */
#*    system precompilation                                            */
#*=====================================================================*/
do: build

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
PACKAGE=system
SCOPE=@hop
BIGLOOEXTRAAPPLIBS=

include ../../Makefile.modules
include ../../Makefile.scoped

#*---------------------------------------------------------------------*/
#*    The entries                                                      */
#*---------------------------------------------------------------------*/
.PHONY: build install uninstall hop _hop config

build: o
	$(MAKE) o/system.$(SHAREDSUFFIX) TARGETNAME=system OBJECTS=o/system.o
	$(MAKE) o/_system.$(SHAREDSUFFIX) TARGETNAME=_system OBJECTS=o/_system.o

npm: clean

install: mkdirs
	$(MAKE) install-so TARGETNAME=system
	$(MAKE) install-so TARGETNAME=_system
	$(RM) -rf $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(PACKAGE)/hop/o
	$(INSTALL) system.mjs $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/system.mjs
	$(INSTALL) _system.hop $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/_system.hop
	$(INSTALL) ../package.json $(INSTALLDIR) && chmod $(MODFILE) $(INSTALLDIR)/package.json
	$(INSTALL) ../type/$(PACKAGE).d.ts $(INSTALLDIR)/type && chmod $(MODFILE) $(INSTALLDIR)/type/$(PACKAGE).d.ts
	$(INSTALL) ../package.json $(INSTALLDIR) && chmod $(MODFILE) $(INSTALLDIR)/package.json
