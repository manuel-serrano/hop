#*    -------------------------------------------------------------    */
#*    xml precompilation                                               */
#*=====================================================================*/
do: build

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
PACKAGE=xml
SCOPE=@hop
BIGLOOEXTRAAPPLIBS=

include ../../Makefile.modules
include ../../Makefile.scoped

#*---------------------------------------------------------------------*/
#*    The entries                                                      */
#*---------------------------------------------------------------------*/
.PHONY: build install uninstall hop _hop xml

build: o
	$(MAKE) o/xml.$(SHAREDSUFFIX) TARGETNAME=xml OBJECTS=o/xml.o
	$(MAKE) o/_xml.$(SHAREDSUFFIX) TARGETNAME=_xml OBJECTS=o/_xml.o

npm: clean

install: mkdirs
	$(MAKE) install-so TARGETNAME=xml
	$(MAKE) install-so TARGETNAME=_xml
	$(RM) -rf $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(PACKAGE)/hop/o
	$(INSTALL) xml.mjs $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/xml.mjs
	$(INSTALL) _xml.hop $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/_xml.hop
	$(INSTALL) ../type/$(PACKAGE).d.ts $(INSTALLDIR)/type && chmod $(MODFILE) $(INSTALLDIR)/type/$(PACKAGE).d.ts
	$(INSTALL) ../package.json $(INSTALLDIR) && chmod $(MODFILE) $(INSTALLDIR)/package.json
