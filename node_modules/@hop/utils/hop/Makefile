#*    -------------------------------------------------------------    */
#*    utils precompilation                                             */
#*=====================================================================*/
do: build

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
PACKAGE=utils
SCOPE=@hop
BIGLOOEXTRAAPPLIBS=

include ../../../Makefile.@modules
include ../../../Makefile.scoped

#*---------------------------------------------------------------------*/
#*    The entries                                                      */
#*---------------------------------------------------------------------*/
.PHONY: build install uninstall hop _hop config

build: o
	$(MAKE) o/utils.$(SHAREDSUFFIX) TARGETNAME=utils OBJECTS=o/utils.o
	$(MAKE) o/_utils.$(SHAREDSUFFIX) TARGETNAME=_utils OBJECTS=o/_utils.o

npm: clean

install: mkdirs
	$(MAKE) install-so TARGETNAME=utils
	$(MAKE) install-so TARGETNAME=_utils
	$(RM) -rf $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(PACKAGE)/hop/o
	$(INSTALL) utils.mjs $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/utils.mjs
	$(INSTALL) _utils.hop $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/_utils.hop
	$(INSTALL) ../package.json $(INSTALLDIR) && chmod $(MODFILE) $(INSTALLDIR)/package.json
	$(INSTALL) ../type/$(PACKAGE).d.ts $(INSTALLDIR)/type && chmod $(MODFILE) $(INSTALLDIR)/type/$(PACKAGE).d.ts
	$(INSTALL) ../package.json $(INSTALLDIR) && chmod $(MODFILE) $(INSTALLDIR)/package.json
