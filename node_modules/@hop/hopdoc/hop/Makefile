#*    -------------------------------------------------------------    */
#*    hopdoc precompilation                                            */
#*=====================================================================*/
do: build

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
PACKAGE=hopdoc
SCOPE=@hop
BIGLOOEXTRAAPPLIBS=

include ../../../Makefile.@modules
include ../../../Makefile.scoped

#*---------------------------------------------------------------------*/
#*    The entries                                                      */
#*---------------------------------------------------------------------*/
.PHONY: build install uninstall hop _hop config

build: o
	$(MAKE) o/hopdoc.$(SHAREDSUFFIX) TARGETNAME=hopdoc OBJECTS=o/hopdoc.o
	$(MAKE) o/_hopdoc.$(SHAREDSUFFIX) TARGETNAME=_hopdoc OBJECTS=o/_hopdoc.o

npm: clean

install: mkdirs
	$(MAKE) install-so TARGETNAME=hopdoc
	$(MAKE) install-so TARGETNAME=_hopdoc
	$(RM) -rf $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(PACKAGE)/hop/o
	$(INSTALL) hopdoc.mjs $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/hopdoc.mjs
	$(INSTALL) _hopdoc.hop $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/_hopdoc.hop
	$(INSTALL) ../package.json $(INSTALLDIR) && chmod $(MODFILE) $(INSTALLDIR)/package.json
	$(INSTALL) ../type/$(PACKAGE).d.ts $(INSTALLDIR)/type && chmod $(MODFILE) $(INSTALLDIR)/type/$(PACKAGE).d.ts
	$(INSTALL) ../package.json $(INSTALLDIR) && chmod $(MODFILE) $(INSTALLDIR)/package.json
