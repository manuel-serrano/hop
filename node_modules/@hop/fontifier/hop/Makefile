#*    -------------------------------------------------------------    */
#*    fontifier precompilation                                         */
#*=====================================================================*/
do: build

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
PACKAGE=fontifier
SCOPE=@hop
BIGLOOEXTRAAPPLIBS=

include ../../../Makefile.@modules
include ../../../Makefile.scoped

#*---------------------------------------------------------------------*/
#*    The entries                                                      */
#*---------------------------------------------------------------------*/
.PHONY: build install uninstall hop _hop config

build: o
	$(MAKE) o/fontifier.$(SHAREDSUFFIX) TARGETNAME=fontifier OBJECTS=o/fontifier.o
	$(MAKE) o/_fontifier.$(SHAREDSUFFIX) TARGETNAME=_fontifier OBJECTS=o/_fontifier.o

npm: clean

install: mkdirs
	$(MAKE) install-so TARGETNAME=fontifier
	$(MAKE) install-so TARGETNAME=_fontifier
	$(RM) -rf $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(PACKAGE)/hop/o
	$(INSTALL) fontifier.mjs $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/fontifier.mjs
	$(INSTALL) _fontifier.hop $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/_fontifier.hop
	$(INSTALL) ../package.json $(INSTALLDIR) && chmod $(MODFILE) $(INSTALLDIR)/package.json
	$(INSTALL) ../type/$(PACKAGE).d.ts $(INSTALLDIR)/type && chmod $(MODFILE) $(INSTALLDIR)/type/$(PACKAGE).d.ts
	$(INSTALL) ../package.json $(INSTALLDIR) && chmod $(MODFILE) $(INSTALLDIR)/package.json
	mkdir -p $(INSTALLDIR)/hss && chmod $(MODDIR) $(INSTALLDIR)/hss
	$(INSTALL) ../hss/fontifier.hss $(INSTALLDIR)/hss && chmod $(MODFILE) $(INSTALLDIR)/hss/fontifier.hss
