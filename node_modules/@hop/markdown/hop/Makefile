#*    -------------------------------------------------------------    */
#*    markdown precompilation                                         */
#*=====================================================================*/
do: build

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
PACKAGE=markdown
SCOPE=@hop
BIGLOOEXTRAAPPLIBS=

include ../../../Makefile.@modules
include ../../../Makefile.scoped

#*---------------------------------------------------------------------*/
#*    The entries                                                      */
#*---------------------------------------------------------------------*/
.PHONY: build install uninstall hop _hop config

build: o
	$(MAKE) o/markdown.$(SHAREDSUFFIX) TARGETNAME=markdown OBJECTS=o/markdown.o
	$(MAKE) o/_markdown.$(SHAREDSUFFIX) TARGETNAME=_markdown OBJECTS=o/_markdown.o

npm: clean

install: mkdirs
	$(MAKE) install-so TARGETNAME=markdown
	$(MAKE) install-so TARGETNAME=_markdown
	$(RM) -rf $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(PACKAGE)/hop/o
	$(INSTALL) markdown.mjs $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/markdown.mjs
	$(INSTALL) _markdown.hop $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/_markdown.hop
	$(INSTALL) ../package.json $(INSTALLDIR) && chmod $(MODFILE) $(INSTALLDIR)/package.json
	$(INSTALL) ../type/$(PACKAGE).d.ts $(INSTALLDIR)/type && chmod $(MODFILE) $(INSTALLDIR)/type/$(PACKAGE).d.ts
	$(INSTALL) ../package.json $(INSTALLDIR) && chmod $(MODFILE) $(INSTALLDIR)/package.json
