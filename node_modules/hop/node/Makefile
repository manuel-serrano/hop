#*    -------------------------------------------------------------    */
#*    Node's hop module                                                */
#*=====================================================================*/
do: build

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
PACKAGE=hop
include ../../Makefile.modules

#*---------------------------------------------------------------------*/
#*    Goals                                                            */
#*---------------------------------------------------------------------*/
build:
	mkdir -p $(NPMDIR)/bin
	echo "#!/usr/bin/env node" > $(NPMDIR)/bin/hopuser.mjs
	echo "import { init } from \"../lib/config.mjs\"" >> $(NPMDIR)/bin/hopuser.mjs
	echo "import { digestPasswordEncrypt } from \"../lib/auth.mjs\"" >> $(NPMDIR)/bin/hopuser.mjs
	echo "init({q: true});" >> $(NPMDIR)/bin/hopuser.mjs
	echo "console.log(JSON.stringify({name: process.argv[2], password: digestPasswordEncrypt(process.argv[2], process.argv[3], process.argv[4] || 'hop'), services: [], directories: []}))" >> $(NPMDIR)/bin/hopuser.mjs
	chmod a+rx $(NPMDIR)/bin/hopuser.mjs
	cp ../client.mjs $(NPMDIR)

postbuild:

clean:

cleanall: clean
	$(RM) -f config.mjs

