#*    -------------------------------------------------------------    */
#*    vcf precompilation                                               */
#*=====================================================================*/
do: build

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
PACKAGE=vcf
SCOPE=@hop
BIGLOOEXTRAAPPLIBS=

include ../../Makefile.modules
include ../../Makefile.scoped

#*---------------------------------------------------------------------*/
#*    The entries                                                      */
#*---------------------------------------------------------------------*/
.PHONY: build install uninstall hop _hop vcf

build: o
	$(MAKE) o/vcf.$(SHAREDSUFFIX) TARGETNAME=vcf OBJECTS=o/vcf.o
	$(MAKE) o/_vcf.$(SHAREDSUFFIX) TARGETNAME=_vcf OBJECTS=o/_vcf.o
	$(MAKE) o/_bbdb.$(SHAREDSUFFIX) TARGETNAME=_bbdb OBJECTS=o/_bbdb.o

npm: clean

install: mkdirs
	$(MAKE) install-so TARGETNAME=vcf
	$(MAKE) install-so TARGETNAME=_vcf
	$(MAKE) install-so TARGETNAME=_bbdb
	$(RM) -rf $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(PACKAGE)/hop/o
	$(INSTALL) vcf.mjs $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/vcf.mjs
	$(INSTALL) _vcf.hop $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/_vcf.hop
	$(INSTALL) _bbdb.hop $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/_bbdb.hop
	$(INSTALL) ../type/$(PACKAGE).d.ts $(INSTALLDIR)/type && chmod $(MODFILE) $(INSTALLDIR)/type/$(PACKAGE).d.ts
	$(INSTALL) ../package.json $(INSTALLDIR) && chmod $(MODFILE) $(INSTALLDIR)/package.json
